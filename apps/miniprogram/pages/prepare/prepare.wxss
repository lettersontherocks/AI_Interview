/* pages/prepare/prepare.wxss */
.prepare-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: 10%;
  left: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  top: 60%;
  right: -50rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  bottom: 20%;
  left: 30%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-30rpx) rotate(10deg);
  }
}

/* 主内容 */
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100vh;
}

/* 面试官头像 */
.interviewer-avatar {
  position: relative;
  margin-bottom: 80rpx;
}

.avatar-outer {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255,255,255,0.3), rgba(255,255,255,0.1));
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  animation: pulse 2s ease-in-out infinite;
}

.avatar-middle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255,255,255,0.4), rgba(255,255,255,0.2));
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-inner {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
}

.avatar-icon {
  font-size: 80rpx;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 加载波纹 */
.loading-waves {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
}

.wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255,255,255,0.6);
  animation: ripple 2s ease-out infinite;
}

.wave-1 {
  animation-delay: 0s;
}

.wave-2 {
  animation-delay: 0.6s;
}

.wave-3 {
  animation-delay: 1.2s;
}

@keyframes ripple {
  0% {
    width: 240rpx;
    height: 240rpx;
    opacity: 1;
  }
  100% {
    width: 400rpx;
    height: 400rpx;
    opacity: 0;
  }
}

/* 准备就绪状态 */
.interviewer-avatar.ready .avatar-outer {
  background: linear-gradient(135deg, rgba(76,217,100,0.3), rgba(52,199,89,0.2));
  animation: bounce 0.6s ease-out;
}

@keyframes bounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* 状态文字 */
.status-text {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.status-main {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.75);
  font-weight: 400;
  text-align: center;
}

.dots {
  display: inline-flex;
  margin-left: 8rpx;
}

.dot {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.75);
  animation: blink 1.4s infinite;
}

.dot-1 {
  animation-delay: 0s;
}

.dot-2 {
  animation-delay: 0.2s;
}

.dot-3 {
  animation-delay: 0.4s;
}

@keyframes blink {
  0%, 20% {
    opacity: 0;
  }
  40%, 100% {
    opacity: 1;
  }
}

/* 进度条 */
.progress-bar {
  width: 500rpx;
  height: 8rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4cd964, #52c7d9);
  border-radius: 4rpx;
  transition: width 0.3s ease;
  box-shadow: 0 0 10rpx rgba(76,217,100,0.6);
}

/* 提示信息 */
.hint-text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  text-align: center;
  margin-top: 20rpx;
}

/* 准备就绪提示 */
.ready-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ready-icon {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #4cd964;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.ready-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

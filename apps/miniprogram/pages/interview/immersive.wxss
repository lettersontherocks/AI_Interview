/* 沉浸式面试模式样式 */
.immersive-container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #fff5f7 50%, #f5f8ff 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}

/* 顶部状态栏 */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

.back-btn, .mode-switch {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.back-btn:active, .mode-switch:active {
  transform: scale(0.95);
  background: #f5f5f5;
}

.back-icon, .switch-icon {
  font-size: 32rpx;
}

.progress-info {
  flex: 1;
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.progress-bar-mini {
  width: 100%;
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill-mini {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s;
}

.progress-label {
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

/* 侧边控制面板 */
.side-controls {
  position: fixed;
  right: 20rpx;
  top: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 90;
}

.side-control-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.side-control-item:active {
  transform: scale(0.9);
  background: rgba(240, 240, 240, 0.95);
}

.side-control-icon {
  font-size: 40rpx;
}

/* 面试官区域 */
.interviewer-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 60rpx;
  margin-top: 100rpx;
  flex-shrink: 0;
}

/* 头像外圈 */
.avatar-outer-ring,
.avatar-middle-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border: 2rpx solid;
  opacity: 0.3;
}

.avatar-outer-ring {
  width: 280rpx;
  height: 280rpx;
  border-color: #667eea;
  animation: pulse-ring 2s ease-in-out infinite;
}

.avatar-middle-ring {
  width: 240rpx;
  height: 240rpx;
  border-color: #764ba2;
  animation: pulse-ring 2s ease-in-out infinite 0.5s;
}

@keyframes pulse-ring {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.1;
  }
}

/* 头像主体 */
.avatar {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  transition: all 0.4s;
}

.avatar-icon {
  font-size: 100rpx;
}

/* 说话时的脉冲效果 */
.avatar-container.pulsing .avatar {
  animation: avatar-pulse 1.5s ease-in-out infinite;
}

@keyframes avatar-pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.05);
    box-shadow: 0 16rpx 50rpx rgba(102, 126, 234, 0.6);
  }
}

/* 声波动画 */
.sound-waves {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
  opacity: 0;
  animation: wave-expand 2s ease-out infinite;
}

.wave-2 {
  animation-delay: 0.7s;
}

.wave-3 {
  animation-delay: 1.4s;
}

@keyframes wave-expand {
  0% {
    width: 200rpx;
    height: 200rpx;
    opacity: 0.8;
  }
  100% {
    width: 350rpx;
    height: 350rpx;
    opacity: 0;
  }
}

/* 思考动画（加载中的小圆点） */
.avatar-container.thinking .avatar {
  animation: thinking-pulse 1.5s ease-in-out infinite;
}

@keyframes thinking-pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.03);
  }
}

.thinking-dots {
  display: flex;
  gap: 12rpx;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #667eea;
  animation: dot-bounce 1.4s infinite ease-in-out;
}

.dot-1 {
  animation-delay: 0s;
}

.dot-2 {
  animation-delay: 0.2s;
}

.dot-3 {
  animation-delay: 0.4s;
}

@keyframes dot-bounce {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.7;
  }
  30% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

/* 状态文字 */
.status-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
  margin-bottom: 30rpx;
  text-align: center;
  animation: fade-in 0.5s;
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
}

/* 淡出动画 */
.status-text.fade-out,
.question-text.fade-out,
.audio-controls.fade-out {
  opacity: 0;
  transform: translateY(-10rpx);
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
}

/* 淡入动画 */
.status-text.fade-in,
.question-text.fade-in,
.audio-controls.fade-in {
  opacity: 1;
  transform: translateY(0);
  transition: opacity 0.4s ease-in-out, transform 0.4s ease-in-out;
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 问题文字 */
.question-text {
  max-height: 300rpx;
  padding: 30rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 30rpx;
  animation: slide-up 0.5s;
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.question-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  text-align: center;
  display: block;
}

/* 音频控制 */
.audio-controls {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.control-btn {
  flex: 1;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s;
}

.control-btn:active {
  transform: scale(0.95);
  background: #f5f5f5;
}

.control-icon {
  font-size: 36rpx;
}

.control-label {
  font-size: 22rpx;
  color: #666;
}

/* 输入区域 */
.input-section {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: white;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.04);
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.quick-btn {
  flex: 1;
  padding: 15rpx 20rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #667eea;
  text-align: center;
  transition: all 0.2s;
}

.quick-btn:active {
  background: #e8eaff;
  transform: scale(0.98);
}

/* 输入框容器 */
.input-wrapper {
  display: flex;
  gap: 10rpx;
  align-items: center;
  width: 100%;
}

.voice-toggle {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  flex-shrink: 0;
  transition: all 0.2s;
}

.voice-toggle:active {
  transform: scale(0.95);
}

.voice-icon {
  font-size: 32rpx;
}

/* 文字输入框 */
.text-input-box {
  flex: 1;
  display: flex;
  gap: 8rpx;
  align-items: center;
  padding: 10rpx 12rpx;
  background: #f8f8f8;
  border-radius: 28rpx;
  box-sizing: border-box;
  min-width: 0;
  overflow: hidden;
}

.answer-textarea {
  flex: 1;
  min-width: 0;
  font-size: 28rpx;
  line-height: 1.5;
  max-height: 150rpx;
  padding: 0;
  background: transparent;
  height: 56rpx;
}

.send-button {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e0e0e0 0%, #d0d0d0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  flex-shrink: 0;
  opacity: 0.6;
}

.send-button .send-icon {
  font-size: 32rpx;
  font-weight: bold;
  color: #999;
  line-height: 1;
  transform: translateX(2rpx);
}

.send-button.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  opacity: 1;
}

.send-button.active .send-icon {
  color: white;
}

.send-button.active:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

/* 语音输入 */
.voice-input-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.record-status {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #f56c6c;
  font-weight: 500;
}

.recording-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #f56c6c;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

.record-button {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.2s;
}

.record-button.recording {
  background: linear-gradient(135deg, #f56c6c 0%, #ff8787 100%);
  animation: pulse-button 1s infinite;
}

@keyframes pulse-button {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

/* 完成遮罩 */
.finish-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fade-in 0.3s;
}

.finish-content {
  background: white;
  border-radius: 30rpx;
  padding: 80rpx 60rpx;
  text-align: center;
  max-width: 550rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  animation: scale-in 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes scale-in {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.finish-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.finish-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.finish-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.view-report-button {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.4);
}

/* 历史对话抽屉 */
.history-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.history-drawer.show {
  opacity: 1;
  pointer-events: all;
}

.drawer-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 70vh;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.history-drawer.show .drawer-content {
  transform: translateY(0);
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.drawer-close {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
}

.drawer-body {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.history-item.candidate {
  flex-direction: row-reverse;
}

.history-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.history-item.candidate .history-avatar {
  background: linear-gradient(135deg, #4caf50 0%, #81c784 100%);
}

.history-content {
  flex: 1;
  padding: 15rpx 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
}

.history-item.candidate .history-content {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* pages/interview/interview.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #e0e0e0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s;
}

.progress-text {
  text-align: center;
  padding: 15rpx;
  font-size: 26rpx;
  color: #999;
  background: white;
}

/* 聊天区域 */
.chat-area {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.message-item.interviewer {
  justify-content: flex-start;
}

.message-item.candidate {
  justify-content: flex-end;
}

.message-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}

.message-item.interviewer .message-avatar {
  margin-right: 15rpx;
}

.message-item.candidate .message-avatar {
  margin-left: 15rpx;
  order: 2;
}

.message-content {
  max-width: 70%;
}

.message-text {
  background: white;
  padding: 20rpx 25rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-wrap: break-word;
}

.message-item.candidate .message-text {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.message-feedback {
  margin-top: 15rpx;
  padding: 15rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 10rpx;
  font-size: 24rpx;
}

.score {
  color: #667eea;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.hint {
  color: #666;
}

/* 输入loading */
.typing-indicator {
  display: flex;
  gap: 8rpx;
  padding: 20rpx 25rpx;
  background: white;
  border-radius: 15rpx;
}

.typing-indicator span {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #667eea;
  animation: typing 1.4s infinite;
}

.typing-indicator span:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator span:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% { opacity: 0.3; }
  30% { opacity: 1; }
}

/* 输入区域 */
.input-area {
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  gap: 15rpx;
  align-items: flex-end;
}

/* 模式切换按钮 */
.mode-toggle {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s;
}

.mode-toggle:active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.mode-icon {
  font-size: 40rpx;
}

/* 文字输入模式 */
.text-input-wrapper {
  flex: 1;
  display: flex;
  gap: 15rpx;
  align-items: flex-end;
}

.answer-input {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 15rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.send-btn {
  padding: 15rpx 35rpx;
  font-size: 28rpx;
}

.send-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
}

/* 语音输入模式 */
.voice-input-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.voice-status {
  text-align: center;
  padding: 10rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 10rpx;
}

.voice-hint {
  font-size: 26rpx;
  color: #999;
}

.recording-animation {
  display: flex;
  gap: 8rpx;
  align-items: center;
}

.wave {
  width: 6rpx;
  height: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
  animation: wave-animation 1s infinite ease-in-out;
}

.wave:nth-child(1) {
  animation-delay: 0s;
}

.wave:nth-child(2) {
  animation-delay: 0.2s;
}

.wave:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave-animation {
  0%, 100% {
    height: 30rpx;
  }
  50% {
    height: 60rpx;
  }
}

.recording-time {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
  margin-top: 5rpx;
}

.record-btn {
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.record-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.record-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
  box-shadow: none;
}

/* 完成区域 */
.finish-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 40rpx 30rpx;
  text-align: center;
  border-top: 1rpx solid #e0e0e0;
}

.finish-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.finish-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.finish-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.view-report-btn {
  width: 80%;
  margin: 0 auto;
}

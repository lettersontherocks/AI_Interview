/* pages/index/index.wxss */
.welcome-section {
  text-align: center;
  padding: 40rpx 0;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.quota-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.quota-text {
  font-size: 28rpx;
  color: #333;
}

.login-btn {
  background: #667eea;
  color: white;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.optional {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 10rpx;
}

/* 岗位网格 */
.position-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.position-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.position-item.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.position-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.position-name {
  font-size: 26rpx;
  color: #333;
}

/* 轮次列表 */
.round-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.round-item {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.round-item.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.round-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.round-desc {
  font-size: 24rpx;
  color: #999;
}

/* 简历输入 */
.resume-input {
  width: 100%;
  min-height: 200rpx;
  background: white;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 开始按钮区域 */
.start-section {
  margin-top: 60rpx;
  text-align: center;
}

.start-btn {
  width: 100%;
  margin-bottom: 20rpx;
}

.start-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

/* 加载遮罩层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.loading-content {
  background: white;
  border-radius: 30rpx;
  padding: 80rpx 60rpx;
  text-align: center;
  max-width: 550rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

.loading-icon {
  margin-bottom: 40rpx;
}

/* 旋转加载图标 */
.spinner {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  position: relative;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}

.spinner-blade {
  position: absolute;
  left: 44rpx;
  top: 14rpx;
  width: 12rpx;
  height: 36rpx;
  border-radius: 6rpx;
  background: #667eea;
  transform-origin: 6rpx 36rpx;
  opacity: 0.15;
}

.spinner-blade:nth-child(1) {
  transform: rotate(0deg);
  animation: fade 1s linear infinite;
  animation-delay: 0s;
}

.spinner-blade:nth-child(2) {
  transform: rotate(45deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.125s;
}

.spinner-blade:nth-child(3) {
  transform: rotate(90deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.25s;
}

.spinner-blade:nth-child(4) {
  transform: rotate(135deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.375s;
}

.spinner-blade:nth-child(5) {
  transform: rotate(180deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.5s;
}

.spinner-blade:nth-child(6) {
  transform: rotate(225deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.625s;
}

.spinner-blade:nth-child(7) {
  transform: rotate(270deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.75s;
}

.spinner-blade:nth-child(8) {
  transform: rotate(315deg);
  animation: fade 1s linear infinite;
  animation-delay: 0.875s;
}

@keyframes fade {
  0%, 100% {
    opacity: 0.15;
  }
  50% {
    opacity: 1;
  }
}

.loading-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.loading-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.loading-tips {
  background: #f5f7fa;
  border-radius: 15rpx;
  padding: 25rpx 30rpx;
  text-align: left;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
  line-height: 1.6;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-dot {
  color: #667eea;
  font-size: 28rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.tip-text {
  font-size: 26rpx;
  color: #555;
  flex: 1;
}

/* app.wxss - 全局样式 - 温暖风格 */
page {
  background: linear-gradient(135deg, #fff9f0 0%, #f0f9ff 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.primary-btn {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: white;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(255, 154, 158, 0.35);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.primary-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.primary-btn:active::before {
  left: 100%;
}

.primary-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.4);
}

.secondary-btn {
  background: white;
  color: #ff9a9e;
  border: 2rpx solid #ff9a9e;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 158, 0.1);
}

.secondary-btn:active {
  background: #fff9f9;
  transform: scale(0.98);
}

/* 温暖风格按钮变体 */
.warm-btn {
  background: linear-gradient(135deg, #fad0c4 0%, #ffd1ff 100%);
  color: white;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(250, 208, 196, 0.35);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.warm-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(250, 208, 196, 0.4);
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 158, 0.1);
  border: 1rpx solid rgba(255, 154, 158, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff9a9e, #fecfef, #fad0c4);
  border-radius: 24rpx 24rpx 0 0;
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 28rpx rgba(255, 154, 158, 0.15);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 3rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.tag-success {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.tag-warning {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e0e0e0;
  margin: 30rpx 0;
}

/* 文本样式 */
.text-primary {
  color: #667eea;
}

.text-muted {
  color: #999;
  font-size: 26rpx;
}

.text-center {
  text-align: center;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

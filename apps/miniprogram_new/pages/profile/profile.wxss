/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid white;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
  color: white;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.vip-badge {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.3);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  width: fit-content;
}

.vip-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.vip-text {
  font-size: 24rpx;
}

.quota-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* VIP小卡片 */
.vip-mini-card {
  background: linear-gradient(135deg, #fff8e1 0%, #ffe8cc 100%);
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 12rpx rgba(255, 193, 7, 0.15);
  transition: all 0.3s;
}

.vip-mini-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 8rpx rgba(255, 193, 7, 0.2);
}

.vip-mini-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.vip-mini-icon {
  font-size: 48rpx;
}

.vip-mini-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.vip-mini-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.vip-mini-desc {
  font-size: 22rpx;
  color: #666;
}

.vip-mini-arrow {
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

/* 面试记录 */
.history-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 24rpx;
  color: #667eea;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.start-practice-btn {
  background: #667eea;
  color: white;
  width: 300rpx;
  margin: 0 auto;
}

.history-list {
  max-height: 600rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
}

.history-item:active {
  transform: scale(0.98);
}

.history-header {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.position-tag,
.round-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #667eea;
  font-weight: 500;
}

.round-tag {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  color: #764ba2;
}

.history-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.score-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-text {
  font-size: 24rpx;
  color: #999;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}

.level-badge {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.level-badge.completed {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.level-badge.unfinished {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

/* 操作按钮 */
.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-btn::after {
  border: none;
}

.continue-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.view-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 设置选项 */
.settings-card {
  background: white;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.setting-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-btn {
  background: white;
  color: #ff4444;
  border: 1rpx solid #ff4444;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
}

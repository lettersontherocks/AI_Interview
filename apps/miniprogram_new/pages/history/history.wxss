/* pages/history/history.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #fff9f0 0%, #f0f9ff 100%);
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #5a4a42;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 加载状态 */
.loading-state {
  padding: 100rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.start-btn {
  width: 400rpx;
  margin: 0 auto;
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}

/* 滚动区域 */
.history-scroll {
  height: calc(100vh - 200rpx);
  padding: 20rpx;
}

/* 面试记录卡片 */
.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  gap: 10rpx;
}

.position-tag,
.round-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.position-tag {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  color: #667eea;
}

.round-tag {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  color: #764ba2;
}

.level-badge {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.level-badge.completed {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.level-badge.unfinished {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

/* 内容区域 */
.item-content {
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.score-row,
.date-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.date-row {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.date-value {
  font-size: 26rpx;
  color: #999;
}

/* 底部操作 */
.item-footer {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 28rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-btn::after {
  border: none;
}

.continue-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.view-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.btn-icon {
  font-size: 26rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
}

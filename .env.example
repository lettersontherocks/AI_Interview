# ==================== 数据库配置 ====================
# PostgreSQL数据库连接信息
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_interview
POSTGRES_USER=interview_user
POSTGRES_PASSWORD=your_secure_password_here

# 完整的数据库连接URL（如果不设置，会自动从上面的配置拼接）
# DATABASE_URL=postgresql://interview_user:your_secure_password_here@postgres:5432/ai_interview

# ==================== AI服务配置 ====================
# 阿里云DashScope API（通义千问）
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# ==================== 语音服务配置 ====================
# 阿里云语音识别（ASR）
ALIYUN_ASR_APP_KEY=your_aliyun_asr_app_key_here
ALIYUN_ASR_ACCESS_KEY_ID=your_aliyun_access_key_id_here
ALIYUN_ASR_ACCESS_KEY_SECRET=your_aliyun_access_key_secret_here

# 火山引擎TTS（豆包语音合成）
VOLCENGINE_APP_ID=your_volcengine_app_id_here
VOLCENGINE_ACCESS_TOKEN=your_volcengine_access_token_here

# ==================== 微信小程序配置 ====================
# 微信小程序AppID和AppSecret
WECHAT_APP_ID=your_wechat_app_id_here
WECHAT_APP_SECRET=your_wechat_app_secret_here

# ==================== Elasticsearch配置 ====================
# Elasticsearch服务地址
ES_HOST=http://47.93.141.137:9200
ES_USERNAME=
ES_PASSWORD=

# ==================== 应用配置 ====================
# 后端服务端口
PORT=8003

# 运行环境：development, production, test
ENVIRONMENT=development

# 每日免费面试次数
FREE_DAILY_LIMIT=2

# VIP价格配置（单位：元）
VIP_MONTHLY_PRICE=9.98
VIP_QUARTERLY_PRICE=19.98
VIP_HALF_YEARLY_PRICE=29.98
VIP_YEARLY_PRICE=49.98

# ==================== CORS配置 ====================
# 允许的跨域来源（多个用逗号分隔）
# ⚠️ 安全提示：生产环境必须设置为具体域名，不要使用 *
#
# 开发环境示例：
# ALLOWED_ORIGINS=http://localhost:8003,http://127.0.0.1:8003
#
# 生产环境示例（如果有域名）：
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
#
# 如果只有IP（生产环境不推荐，但可暂时使用）：
ALLOWED_ORIGINS=http://47.93.141.137:8003

# ==================== 日志配置 ====================
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==================== 文件存储配置 ====================
# 音频文件存储路径
AUDIO_OUTPUT_DIR=audio_outputs

# 简历文件上传路径
RESUME_UPLOAD_DIR=uploads/resumes

# 文件自动清理（天数，0表示不清理）
FILE_CLEANUP_DAYS=7
